{
  "name": "inDoors - Glassdoor Integrator for Linkedin",
  "short_name": "inDoors",
  "description": "Shows Glassdoor reviews for companies when searching on Linkedin",
  "version": "1.0.1",

  "content_scripts": 
    [
        {
            "matches":["https://www.linkedin.com/vsearch/*"],
            "css":["linker.css"],
            "js":["jquery-2.1.3.min.js","var.js", "linker.min.js"],
            "run_at": "document_end"
        }
    ],
  "permissions": [
    "https://api.glassdoor.com/*","storage"
  ],
  "icons": {
    "16":"icon/icon16.png",
    "48":"icon/icon48.png",
    "128":"icon/icon128.png" 
  },
  "manifest_version": 2
}